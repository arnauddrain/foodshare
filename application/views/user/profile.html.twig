{% extends 'templates/welcome.html.twig' %}
{% block content %}
       
    <section id="slider" class="shell clearfix garnish" style="padding: 20px; min-height: 200px;">
        <h2 class="centered">
            <span>Profil de {{ user_name }}</span>
        </h2>
        <div class="row">
            <div class="col-md-3"><img src="/img/defaultProfilePicture.png"></div>
            <div class="col-md-3" style="margin-bottom: 10px;"><input type="text" class="form-control" id="prenom" placeholder="Prénom"></div>
            <div class="col-md-3" style="margin-bottom: 10px;"><input type="text" class="form-control" id="nom" placeholder="Nom de famille"></div>
            <div class="col-md-4" style="margin-right: 100px; margin-bottom: 10px;"><input type="text" class="form-control" id="adresse" placeholder="Adresse"></div>
            <div class="col-md-4" style="margin-right: 300px; margin-bottom: 10px;"><input type="text" class="form-control" id="adresse" placeholder="Complément d'adresse"></div>
            <div class="col-md-2"><input type="text" class="form-control" id="cpostal" placeholder="Code postal"></div>
            <div class="col-md-2"><input type="text" class="form-control" id="ville" placeholder="Ville"></div>
            <form action="/demo/doProfile"><div class="col-md-9" style="margin-top: 10px;"><button class="btn btn-primary" type="submit">Envoyer</button></div></form>
        </div>
    </section>
{% endblock %}